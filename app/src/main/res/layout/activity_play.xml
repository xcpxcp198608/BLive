<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.wiatec.blive.view.activity.PlayActivity">

    <VideoView
        android:layout_gravity="center"
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:visibility="gone"
        android:id="@+id/tvChannelMessage"
        tools:text="test test test"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_channel_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ibtEdit"
        android:layout_margin="8dp"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/bg_bt_operation"
        android:src="@drawable/ic_border_color_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:scrollbars="none"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:id="@+id/scrollView"
        android:layout_width="280dp"
        android:layout_height="200dp">

        <TextView
            android:padding="3dp"
            android:id="@+id/tvComment"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_light"
            tools:text="guest:fsdfdsf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <EditText
        android:id="@+id/etMessage"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:imeOptions="actionSend"
        android:layout_gravity="bottom"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>
